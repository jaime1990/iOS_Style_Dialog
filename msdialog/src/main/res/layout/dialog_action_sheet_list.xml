<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_action_sheet_top"
            android:gravity="center"
            android:minHeight="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/alert"
            android:textAllCaps="false"
            android:textColor="@color/def_title_color"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/lv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/act_line"
            android:dividerHeight="1px"
            tools:listitem="@layout/item_sheet" />

        <!--        <android.support.v7.widget.RecyclerView-->
        <!--            android:id="@+id/rv_data"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:padding="5dp"-->
        <!--            app:layoutManager="android.support.v7.widget.LinearLayoutManager"-->
        <!--            tools:itemCount="4"-->
        <!--            tools:listitem="@layout/item_sheet" />-->

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/sel_action_sheet_single"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="false"
            android:textColor="@color/def_title_color"
            android:textSize="18sp" />

    </LinearLayout>
</layout>